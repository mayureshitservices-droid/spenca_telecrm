<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TelecrmApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ui_primary</item>
        <item name="colorPrimaryVariant">@color/ui_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/ui_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@color/ui_background</item>
        <item name="android:statusBarColor">@color/ui_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/ui_background</item>
    </style>
    <style name="Theme.Telecrm.DarkDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/ui_text_primary</item>
        <item name="android:textColorSecondary">@color/ui_text_secondary</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/ui_text_primary</item>
    </style>
</resources>
